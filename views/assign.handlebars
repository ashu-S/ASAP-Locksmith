<div class="body-webpage">
	<div class="jumbotron services-jumbotron">
			<div class="container">
			<h2 class="service-header">ASSIGN NEW JOBS TO TECHNICIANS</h2>
		      <!-- START THE FEATURETTES -->
		    <hr class="featurette-divider">
		    <div class="row featurette">
		    	<!-- Get job details to assign the technician -->
		    	<h3 class="formHeader">Get job details</h3>
		    	<form method="GET" role="form" class="form-horizontal signup-body" id="getJobDetails">
		    		<div class="form-group row">
                    	<label for="jobId" class="col-sm-2 control-label">Job Id</label>
                   		<input type="list" class="form-control" id="jobId" placeholder="Job Id" />
                   		<button type="submit" class="btn btn-primary btn-sm" id="getJobButton">Details</button>
                    </div>	
                </form>
		    	<h3 class="formHeader"> Assign a technician: </h3>
		       	<form method="POST" role="form" class="form-horizontal signup-body" id="assignJobs">
		       		<div class="assignForm-group">
                    	<label for="jobId" class="col-sm-2 control-label">Job Id</label>
                        <div class="col-sm-10">
                            <h3> {{this.id}} </h3>
                        </div>                            
                    </div>
                    <div class="assignForm-group">
                        <label for="services" class="col-sm-2 control-label">Services</label>
                        <div class="col-sm-10">
                            <h3> {{this.services}} </h3>
                        </div>
                    </div>
                    <div class="assignForm-group">
                    	<label for="specific_service" class="col-sm-2 control-label">Specific Service</label>
                        <div class="col-sm-10">
                        	<h3> {{this.specific_service}} </h3>
                        </div>
                    </div>
                    <div class="assignForm-group">
                        <label for="SkillsbStatus" class="col-sm-2 control-label">skill</label>
                        <div class="col-sm-10">
                       	</div>
                    </div> 	
                    <div>
                    	<fieldset>
						    <legend>Select new job status:</legend>
						    <div id="fieldsetData">
		                        <label for="assignRadio">Assign</label>
							    <input type="radio" id="assignRadio" name="assign" value="assigned">
							    <label for="holdRadio" id="fieldsetData1">Hold</label>
							    <input type="radio" id="hold" name="hold" value="onHold">
                  <input type="radio" id="completed" name="completed" value="completed">
							</div>
						</fieldset>
					</div>
					<div class="row">
                        <div class="col-sm-2">
                        </div>
                   		<div class="col-sm-10">
                    	<button type="submit" class="btn btn-primary btn-sm" id="signupButton">Submit</button>
                    	</div>
                    </div>
                </form>
		    </div>
