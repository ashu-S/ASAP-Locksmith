<div class="container" style="position: relative; top: 45px;">
  {{#each Job}}
  <div class="panel panel-default job-panel">
    <div class="panel-body">
      <div class="row accept-row">
        <div class="col-xs-6">
          <p><strong>NAME:</strong> {{this.client_name}}</p>
          <p><strong>LOCATION:</strong> {{this.client_location}}</p>
          <p><strong>CONTACT:</strong> {{this.client_contact}}</p>
          <p><strong>SERVICE TYPE:</strong> {{this.services}}</p>
          <p><strong>DESCRIPTION:</strong> {{this.specific_service}}</p>
        </div>
        <div class="col-xs-6 accept-form">
          <form method="POST" action="/api/update">
            <input input type="hidden" type="text" name="job_id" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Accept</button>
          </form>
          <form method="POST" action="/api/delete">
            <input input type="hidden" type="text" name="job_id" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Reject</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
