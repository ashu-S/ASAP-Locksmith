 <div class="container">
   <div class="jumbotron" style="background-color: lightblue; position: relative; top: 80px;">
         {{#each Job}}
 			  	{{#unless this.assigned}}
 					<h2>{{this.id}}. {{this.client_name}} {{this.client_location}} {{this.client_contact}} {{this.services}} {{this.specific_service}}
            <form method="POST" action="" class="button-size">
  						<input input type="hidden" type="text" name="job_id" value={{this.id}}><br>
  						<button type="submit" class="btn btn-default delete" data-id={{this.id}}>Reject</button>
					  </form>
            <form method="POST" action="/api/update?_method=PUT" class="button-size">
						  <input input type="hidden" type="text" name="job_id" value={{this.id}}><br>
						  <button type="submit" class="btn btn-default">Accept</button>
					  </form>
          </h2>
 				{{/unless}}
 			  {{/each}}
        <button type="submit" class="btn btn-default">Press it!</button>
   </div>
 </div>

 <script>
 $(".delete").click(function() {

   var job = {
     id: $(this).attr("data-id")
   };

   $.post("/api/delete", job)
     // On success, run the following code
     .done(function(deldata) {
       // Log the data we found
       console.log(deldata);
       console.log("Deleted Successfully!");
     });

 });
 </script>
